package questão_08_atividade_09;

import java.util.Scanner;

/**
 *
 * @author rafael
 */
public class Questão_08_Atividade_09 {
    
    public static class Atividade_009{
        
        public void menu(){
            int escolha;
            Aluno cadastro = null;
            
            do{
            Scanner entrada = new Scanner(System.in);
            
            System.out.println("===== MENU =====");
            System.out.println("1 - Cadastrar Aluno.");
            System.out.println("2 - Visualizar Alunos cadastrados.");
            System.out.println("3 - Encerrar o sistema.");
            escolha = entrada.nextInt();
            
            switch (escolha){
                case 1 -> cadastro = Aluno.cadastro();
                case 2 -> {
                    if(cadastro!=null){
                    cadastro.exibir();
                }else{
                    System.out.println("Nenhum aluno cadastrado!");
                }}
                case 3 -> System.out.println("Encerrando o sistema!");
                default -> System.out.println("Opção invalida! \nDigite 1, 2 ou 3.");
            }
            }while(escolha!=3);
        }
    }

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
        // TODO code application logic here
        Atividade_009 iniciar = new Atividade_009();
        iniciar.menu();
    }
    
}




